<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.birdsenger.controller.LoginController"
      alignment="CENTER" spacing="18.0"
      prefWidth="1000.0" prefHeight="700.0"
      styleClass="root-container light-theme">

    <children>

        <!-- LOGIN CARD -->
        <VBox fx:id="loginForm" spacing="12.0" alignment="CENTER" styleClass="form-card same-size">
            <children>
                <VBox alignment="CENTER" spacing="4.0">
                    <children>
                        <Label text="BirdSenger" styleClass="app-title">
                            <font><Font name="System Bold" size="26.0"/></font>
                        </Label>
                        <Label text="Secure Real-time Chat" styleClass="app-subtitle">
                            <font><Font size="12.0"/></font>
                        </Label>
                    </children>
                </VBox>

                <Label text="Welcome Back" styleClass="form-title"/>

                <VBox spacing="8.0" maxWidth="540.0">
                    <children>
                        <TextField fx:id="loginUsername" promptText="Email or Username" styleClass="input"/>
                        <PasswordField fx:id="loginPassword" promptText="Password" styleClass="input"/>
                        <Button fx:id="loginButton" text="Login" styleClass="primary-button"/>
                        <Hyperlink fx:id="forgotPassword" text="Forgot Password?"/>
                        <Label fx:id="loginMessage" styleClass="form-message"/>
                    </children>
                </VBox>

                <Hyperlink fx:id="switchToSignup" text="Donâ€™t have an account? Sign up"/>
            </children>
            <padding>
                <Insets top="22.0" right="26.0" bottom="22.0" left="26.0"/>
            </padding>
        </VBox>

        <!-- SIGNUP CARD -->
        <VBox fx:id="signupForm" spacing="12.0" alignment="CENTER" styleClass="form-card same-size" visible="false" managed="false">
            <children>
                <VBox alignment="CENTER" spacing="4.0">
                    <children>
                        <Label text="BirdSenger" styleClass="app-title">
                            <font><Font name="System Bold" size="26.0"/></font>
                        </Label>
                        <Label text="Secure Real-time Chat" styleClass="app-subtitle">
                            <font><Font size="12.0"/></font>
                        </Label>
                    </children>
                </VBox>

                <Label text="Create an Account" styleClass="form-title"/>

                <VBox spacing="8.0" maxWidth="540.0">
                    <children>
                        <TextField fx:id="signupEmail" promptText="Email" styleClass="input"/>
                        <TextField fx:id="signupUsername" promptText="Username" styleClass="input"/>
                        <PasswordField fx:id="signupPassword" promptText="Password" styleClass="input"/>
                        <PasswordField fx:id="confirmPassword" promptText="Confirm Password" styleClass="input"/>
                        <Button fx:id="signupButton" text="Create Account" styleClass="primary-button"/>
                        <Label fx:id="signupMessage" styleClass="form-message"/>
                    </children>
                </VBox>

                <Hyperlink fx:id="switchToLogin" text="Already have an account? Login"/>
            </children>
            <padding>
                <Insets top="22.0" right="26.0" bottom="22.0" left="26.0"/>
            </padding>
        </VBox>

        <!-- Bottom theme toggle outside card -->
        <HBox alignment="CENTER" spacing="10.0">
            <children>
                <Label fx:id="themeLabel" text="Light" styleClass="toggle-label"/>
                <ToggleButton fx:id="themeSwitch" text="" styleClass="switch"/>
                <Label text="Dark" styleClass="toggle-label"/>
            </children>
        </HBox>

    </children>
</VBox>
